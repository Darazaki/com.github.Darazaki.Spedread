{
    "app-id": "com.github.Darazaki.Spedread",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "spedread",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "spedread",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dadw_1_2=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Darazaki/Spedread",
                    "tag": "v2.3.1",
                    "commit": "2c2ed8b6df54e689aa5f6f8ad7636102b2a81fcb"
                }
            ]
        }
    ]
}
